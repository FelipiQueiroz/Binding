export class ApoliceComponent {
  seguro = {
    nome: '',
    sexo: 'masculino',
    idade: 0,
    valorAutomovel: 0
  };
  valorApolice: number | null = null;

  calcularSeguro(form: NgForm) {
    if (form.valid) {
      const { sexo, idade, valorAutomovel } = this.seguro;
      if (sexo === 'masculino') {
        this.valorApolice = idade <= 25 ? valorAutomovel * 0.15 : valorAutomovel * 0.10;
      } else {
        this.valorApolice = valorAutomovel * 0.08;
      }
    } else {
      alert('Preencha todos os campos.');
    }
  }
}
<form #seguroForm="ngForm" (ngSubmit)="calcularSeguro(seguroForm)">
  <label>Nome: </label><input type="text" name="nome" [(ngModel)]="seguro.nome" required /><br />
  <label>Sexo: </label>
  <select name="sexo" [(ngModel)]="seguro.sexo" required>
    <option value="masculino">Masculino</option>
    <option value="feminino">Feminino</option>
  </select><br />
  <label>Idade: </label><input type="number" name="idade" [(ngModel)]="seguro.idade" required /><br />
  <label>Valor do Automóvel: </label><input type="number" name="valorAutomovel" [(ngModel)]="seguro.valorAutomovel" required /><br />
  <button type="submit">Calcular Apólice</button><br />
  <p *ngIf="valorApolice">Valor da Apólice: {{ valorApolice | currency }}</p>
</form>
